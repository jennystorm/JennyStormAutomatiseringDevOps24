server {
    listen {{ ansible_host }}:80;
    listen 100.126.40.51:80;    #Min tailscaleanslutning för att kunna kolla sidan när jag sitter hemma
    listen {{ ansible_host }}:443 ssl;
    listen 100.126.40.51:443 ssl;
    root /var/www/example.internal/html;
    index index.html;
    server_name example.internal;

    ssl_certificate "/etc/pki/nginx/server.crt";
    ssl_certificate_key "/etc/pki/nginx/private/server.key";
    ssl_session_cache shared:SSL:1m;
    ssl_session_timeout  10m;
    ssl_ciphers PROFILE=SYSTEM;
    ssl_prefer_server_ciphers on;

    location / {
        try_files $uri $uri/ =404;
    }
}
